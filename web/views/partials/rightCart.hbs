<div class="modal right fade" id="cartModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content" >
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel2">Cart</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body" id="cartBody">
      </div>
      <div class="modal-footer" id="cartFooter">
      </div>
    </div>
  </div>
</div>

<script id="template" type="text/x-handlebars-template">
  <div class="row right-item">
    <div class="col-6 col-sm-7">
      <img class="card-img-top" src="\{{image}}" alt="cartItem photo">
    </div>
    <div class="col-6 col-sm-5">
      <h6>\{{name}}</h6>
      <p>
        $<span>\{{price}}</span>
      </p>
      <div class="right-add-min-button">  
        <input type="hidden" name="productId" value="\{{id}}">
        <button onclick="cart(this)" class="right-cart-btn" value="minus"><i class="fas fa-minus icon"></i></button>
        <input id="num" name="num" value="\{{quantity}}" readonly="true" class="right-cart-btn">
        <button onclick="cart(this)" class="right-cart-btn" value="plus"><i class="fas fa-plus icon"></i></button>
      </div>
      <input type="hidden" name="cartItemId" id="cart-item-id" value="\{{cartItemId}}">
      <div>  
        <button onclick="remove(this)" class="btn trash-right"><i class="fas fa-trash-alt fa-lg"></i></button>
      </div>
    </div>
  </div>
</script>
