<div class="alert-page">
{{> alert}}
</div>

<div class="row products-page">
{{#each FavoritedProducts}}
  <div class="card">
    <a href="/product/{{this.id}}" class="a-custom" style="text-decoration:none;">
      <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
      <div class="card-body favorite-card">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">${{this.price}}</p>
      </div>
    </a>
      <div class="card-footer">
        <form action="/cart/{{this.id}}" method="POST" class="favorite">
          <input type="hidden" name="num" value="1">
          <button type="submit" class="btn btn-secondary">Add To Cart</button>
        </form>
        
        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#f{{this.id}}">
          <i class="fas fa-times"></i> 
        </button>
      </div>
    
  </div>

  <!-- remove modal -->
  <div class="modal fade" id="f{{this.id}}" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Remove form the wishlist</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Are you sure if you want to remove it from the wishlist?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" class="favorite">
          <button type="submit" class="btn btn-primary">
            Yes
          </button>
        </form>
        </div>
      </div>
    </div>
  </div>

{{/each}}
</div>

<nav aria-label="Page navigation" class="nav-page">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="?page={{prev}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>
    {{#each page}}
    <li class="page-item"><a class="page-link" href="?page={{this}}">{{this}}</a></li>
    {{/each}}
    <li class="page-item">
      <a class="page-link" href="?page={{post}}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Next</span>
      </a>
    </li>
  </ul>
</nav>
	
