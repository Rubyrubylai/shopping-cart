<div class="modal right fade" id="cartModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel2">Cart</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        {{#each items}}
        <div class="row" style="margin-bottom: 10px;">
          <div class="col-7">
            <img class="card-img-top" src="{{this.image}}" alt="cartItem photo">
            
          </div>
          <div class="col-5">
            <h6>{{this.name}}</h6>
            <p>${{this.price}}</p>
            <div class="add-min-button horizontal-left">
              <input id="min" type="button" value="-" >
              <input id="num" name="num" value="{{this.quantity}}" readonly="true">
              <input id="add" type="button" value="+">
            </div>
            <div>
              <form action="/cart?_method=DELETE" method="POST">
                <input type="hidden" name="ProductId" value="{{this.id}}">
                <button type="submit" class="btn"><i class="fas fa-trash-alt fa-lg"></i></button>
              </form>
            </div>  
          </div>
        </div>
        {{/each}}
      </div>
      <div class="modal-footer">
        <div class="subtotal">
          <h6 class="inline">Subtotal: </h6>
          <p class="inline">${{totalPrice}}</p>
        </div>
        <form action="" method="GET">
          <button type="submit" class="btn btn-primary">check out</button>
        </form>
      </div>
    </div>
  </div>
</div>
	