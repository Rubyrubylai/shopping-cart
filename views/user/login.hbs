<div class="log-in">
  <h2><i class="fas fa-sign-in-alt"></i> Log In</h2>
  <form class="form-logIn" action="/user/login" method="POST">
    <div class="form-group">
      <label for="email">Email address</label>
      <input type="email" class="form-control" id="email" name="email" value="tony@example.com" placeholder="Enter email">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" id="password" name="password" value="a123456" placeholder="Password">
    </div>
    <div class="form-group">
      No Account?
      <a href="/user/register">Register here</a>
    </div>
    {{>alert}}
    <center>
      <button type="submit" class="btn btn-secondary custom-btn">Submit</button>
    </center>
  </form>
</div>
