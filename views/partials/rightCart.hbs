<div class="modal right fade" id="cartModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel2">Cart</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        {{#if noItems}}
        <div>
          <p>The cart is empty.</p>
        </div>
        {{/if}}
        {{#each items}}
        <div class="row right-item">
          <div class="col-7">
            <img class="card-img-top" src="{{this.image}}" alt="cartItem photo">
            
          </div>
          <div class="col-5">
            <h6>{{this.name}}</h6>
            <p>${{this.price}}</p>
            <div class="right-add-min-button">
              <form action="/cartItem/{{this.cartItemId}}/min" method="POST" class="cart">
                <input type="submit" id="min" type="button" value="-" >
              </form>
              <input id="num" name="num" value="{{this.quantity}}" readonly="true" class="cart">
              <form action="/cartItem/{{this.cartItemId}}/add" method="POST" class="cart">
                <input type="submit" id="add" type="button" value="+">
              </form>
            </div>
            <div class="trash">
              <form action="/cartItem?_method=DELETE" method="POST">
                <input type="hidden" name="cartItemId" value="{{this.cartItemId}}">
                <button type="submit" class="btn trash-right"><i class="fas fa-trash-alt fa-lg"></i></button>
              </form>
            </div>  
          </div>
        </div>
        {{/each}}
      </div>
      <div class="modal-footer">
        {{#if noItems}}
        <a type="button" class="btn btn-secondary" href="/product" style="text-decoration: none;">Keep Shopping</a>
        {{else}}
        <div class="div-subtotal">
          <h6 class="total">Subtotal: </h6>
          <p class="total">${{totalPrice}}</p>
        </div>
        <form action="/cart" method="GET">
          <button type="submit" class="btn btn-secondary">check out</button>
        </form>
        {{/if}}
      </div>
    </div>
  </div>
</div>

<script src="/index.js"></script>
	