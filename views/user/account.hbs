<h2>My Account</h2>
<div class="account">
<form action="/user/account?_method=PUT" method="POST">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="name">Name</label>
      <input type="string" class="form-control" id="name" name="name" value="{{user.name}}" placeholder="Name">
    </div>
    <div class="form-group col-md-6">
      <label for="email">Email</label>
      <input type="email" class="form-control" id="email" name="email" value="{{user.email}}" placeholder="Email">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="account">Account</label>
      <input type="string" class="form-control" id="account" name="account" value="{{user.account}}" placeholder="Account">
    </div>
    <div class="form-group col-md-6">
      <label for="password" id="password-label">Password</label>
      <button id="reset-btn" class="btn btn-secondary">Reset Password</button>
      <div id="confirm-password">
      </div>
    </div>
  </div>
  
  <div class="form-group">
    <label for="address">Address</label>
    <input type="text" class="form-control" id="address" name="address" value="{{user.address}}" placeholder="1234 Main St">
  </div>
  <div class="form-group">
    <label for="phone">Phone Number</label>
    <input type="string" class="form-control" id="phone" name="phone" value="{{user.phone}}" placeholder="Ex: 0912123456">
  </div>
  {{>alert}}
  <center>
    <button type="submit" class="btn btn-secondary custom-btn">Update</button>
  </center>
</form>
</div>

<script src="/reset.js"></script>