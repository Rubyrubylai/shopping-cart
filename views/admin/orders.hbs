<h2 id="title">後台</h2>
<a href="/admin/products" style="text-decoration: none;">Product</a> |
<a href="/admin/orders" style="text-decoration: none;">Order</a>
<br>
<a href="/admin/products/new" type="button" class="btn btn-primary add-btn">Add New Product</a>

<table class="table table-bordered">
  <thead class="thead-light">
    <tr class="text-center">
      <th scope="col">Order Number</th>
      <th scope="col">Order Date</th>
      <th scope="col">Shipping Status</th>
      <th scope="col">Payment Method</th>
      <th scope="col">Payment Status</th>
      <th scope="col">Detail</th>
    </tr>
  </thead>
  <tbody>
    {{#each orders}}
    <tr class="text-center">
      <td>#{{this.id}}</td>
      <td>{{Date this.createdAt}}</td>
      <td>
        {{#ifEquals this.shipping_status '-1'}}Preparing{{/ifEquals}}
        {{#ifEquals this.shipping_status '0'}}Shipping{{/ifEquals}}
        {{#ifEquals this.shipping_status '1'}}Arrived{{/ifEquals}}
      </td>
      <td></td>
      <td>
        {{#ifEquals this.payment_status '-1'}}Not Paid{{/ifEquals}}
        {{#ifEquals this.payment_status '1'}}Paid{{/ifEquals}}
      </td>
      <td>
        <a href="/admin/orders/{{this.id}}">Edit Detail</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>