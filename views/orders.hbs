{{>alert}}

<table class="table">
  <thead>
    <tr>
      <th scope="col">Order Number</th>
      <th scope="col">Order Date</th>
      <th scope="col">Shipping Status</th>
      <th scope="col">Payment Method</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each orders}}
      <tr>
        <th scope="row">
          <a href="/order/{{this.dataValues.id}}" style="text-decoration: none;" class="a-custom">#{{this.dataValues.id}}</a>
        </th>
        <td>{{Date this.dataValues.createdAt}}</td>
        <td>{{this.dataValues.shipping_status}}</td>
        <td>{{this.dataValues.Payments.payment_method}}</td>
        <td>
          <form action="/order/{{this.dataValues.id}}/cancel" method="POST">
            <button type="submit" class="btn btn-secondary">Cancel</button>
          </form>
        </td>
      </tr>
    
    {{/each}}
  </tbody>
</table>