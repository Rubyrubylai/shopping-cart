{{> alert}}

<h2 id="title">Add New Product</h2>

<form action="/admin/products/new" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <input type="text" class="form-control" name="name" placeholder="Product Name">
  </div>
  <div class="form-group">
    <img id="image">
    <div class="inline-block">
      <label for="image">Upload File</label>
      <input id="file" type="file" class="form-control-file" id="image" name="image">
    </div>
  </div>
  <div class="form-group">
    <textarea class="form-control" rows="6" name="description" placeholder="Add Product Description"></textarea>
  </div>
  <div class="form-group">
    <input type="number" class="form-control" name="price" placeholder="Price">
  </div>
  <center>
    <button type="submit" class="btn btn-secondary checkOut-btn">submit</button>
  </center>
</form>


<script src="/image.js"></script>