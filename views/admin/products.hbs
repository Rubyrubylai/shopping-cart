{{> alert}}

<h2 id="title">後台</h2>
<a href="/admin/products" style="text-decoration: none;">Product</a> |
<a href="/admin/orders" style="text-decoration: none;">Order</a>
<br>
<a href="/admin/products/new" type="button" class="btn btn-primary add-btn">Add New Product</a>

<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th scope="col custom-table-width">Product Name</th>
      <th scope="col custom-table-width">Image</th>
      <th scope="col">Price</th>
      <th scope="col">Option</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <td>{{this.name}}</td>
      <td>
        <img class="card-img-top" style="width: 200px;" src="{{this.image}}" alt="product_photo">
      </td>
      <td>${{this.price}}</td>
      <td>
        <a href="/admin/products/{{this.id}}">Edit Detail</a>
      </td>
      <td>
        <form action="/admin/products/{{this.id}}?_method=DELETE" method="POST">
          <button type="submit" class="btn" style="margin-top: -6px;"><i class="fas fa-trash-alt"></i></button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
